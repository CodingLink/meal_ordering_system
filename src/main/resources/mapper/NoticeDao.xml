<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.meal_ordering_system.dao.NoticeDao">

    <resultMap type="com.example.meal_ordering_system.entity.Notice" id="NoticeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="times" column="times" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="NoticeMap">
        select id,
               name,
               content,
               times
        from apsfc.notice
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="NoticeMap">
        select id,
               name,
               content,
               times
        from apsfc.notice limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="NoticeMap">
        select
        id, name, content, times
        from apsfc.notice
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="times != null and times != ''">
                and times = #{times}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into apsfc.notice(name, content, times)
        values (#{name}, #{content}, #{times})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into apsfc.notice(name, content, times)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.content}, #{entity.times})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into apsfc.notice(name, content, times)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.content}, #{entity.times})
        </foreach>
        on duplicate key update
        name = values(name) , content = values(content) , times = values(times)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update apsfc.notice
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="times != null and times != ''">
                times = #{times},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from apsfc.notice
        where id = #{id}
    </delete>

</mapper>